extends layout
block content
  h1 Author: #{author.name}
  p #{author.lifespan}
    div(style="maring-left:20px;margin-top:20px")
      h4 Books
      dl
        each book in author_books
          dt
            a(href=book.url) #{book.title}
          dd #{book.summary}
        else
          This Author has no books
